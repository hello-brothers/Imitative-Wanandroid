<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="splash_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="DialogButtonText">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@null</item>
    </style>

    <style name="common_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_corner_bg</item> <!-- 背景透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 没有标题 -->
        <item name="android:backgroundDimEnabled">true</item> <!-- 背景模糊 -->
    </style>

    <style name="item_gray_text">
        <item name="android:textSize">@dimen/dp_16</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/comment_text</item>
    </style>

    <style name="item_essay_withbg_text">
        <item name="android:background">@drawable/essay_list_h</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="item_flex_text">
        <item name="android:layout_margin">@dimen/dp_5</item>
        <item name="android:textColor">@color/comment_text</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dp_10</item>
    </style>
</resources>
