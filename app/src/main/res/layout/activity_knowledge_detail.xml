<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.KnowledgeDetailActivity">

    <include layout="@layout/common_toolbar"/>


    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/knowledge_detail_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        app:tl_textsize="@dimen/sp_14"
        app:tl_tab_space_equal="false"
        app:tl_underline_color="@color/colorCard"
        app:tl_underline_height="@dimen/dp_10"
        app:tl_textSelectColor="@color/blue4"
        app:tl_textUnselectColor="@color/gray_txt"
        android:background="@color/colorCard"
        app:tl_indicator_color="@color/blue4"
        app:tl_indicator_width_equal_title="true"
        android:visibility="invisible"/>
    <View
        android:id="@+id/knowledge_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray_bg"
        android:visibility="invisible" />
    <android.support.v4.view.ViewPager
        android:id="@+id/knowledge_detail_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        />


</LinearLayout>